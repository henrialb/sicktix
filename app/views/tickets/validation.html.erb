<div class="container">
  <div class="row">
    <% if @success %>
      <div class="col-sm-12 col-lg-6 card-validation-success">
        <i class="fas fa-check-square text-success"></i>
        <h1 class="mb-5">Ticket validated 🎉</h1>
        <%= link_to 'Go back', event_order_path(@ticket.order.event, @ticket.order), method: :get, class: 'btn-1 mr-3' %>      </div>
    <% else %>
      <div class="col-sm-12 col-lg-6 card-validation-fail">
        <i class="fas fa-times-circle text-danger"></i>
        <h1 class="mb-4">Ticket is invalid 👎</h1>
        <%= link_to 'Go back', event_order_path(@ticket.order.event, @ticket.order), method: :get, class: 'btn-1 mr-3' %>
      </div>
    <% end %>
  </div>
</div>
