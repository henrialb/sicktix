<div class="pdf-body">

  <div class="d-flex justify-content-between">
    <div>
      <%= image_tag "logo.png", alt: '', class: 'pdf-logo' %>
      <br>
      <h1 class="mt-3">
        <%= @event.name %>
      </h1>
    </div>
    <span class='pdf-qr'><%= @ticket.qr_code(10) %></span>
  </div>

  <h2>
    <%= @event.starts_at.strftime("%A, #{@event.starts_at.day.ordinalize} %b %Y, %-l:%M%p") %>
  </h2>

  <p>
    Ticket#: <%= @ticket.hex %>  //  Issued: <%= @ticket.created_at.strftime("%A, #{@ticket.created_at.day.ordinalize} %b %Y, %-l:%M%p") %>
  </p>

  <div class="pdf-flyer d-flex justify-content-around align-items-center <% 'bg-darker' unless @event.image.attached? %>">
    <% if @event.image.attached? %>
      <%= cl_image_tag @event.image.key, crop: :fill, alt: "event flyer", class: "pdf-flyer-img" %>
    <% else %>
      <h1>FUN!</h1>
    <% end %>
  </div>

  <br>
  <div class="d-flex justify-content-between align-items-center">
    <span class='pdf-qr'><%= @ticket.qr_code(8) %></span>
    <div class="pdf-venue-map">
      <% if @event.venue_map.attached? %>
        <%= cl_image_tag @event.venue_map.key, crop: :fill, alt: "venue map" %>
      <% elsif @event.venue.map.attached? %>
        <%= cl_image_tag @event.venue.map.key, crop: :fill, alt: "venue map" %>
      <% end %>
    </div>
    <div>
      <h1 style="text-align: right">
        <%= @event_category.name %>
      </h1>
      <br>
      <h1 class="pdf-price">
        â‚¬<%= @event_category.price %>
      </h1>
    </div>
  </div>
</div>
