<div class="pdf-body">

  <div class="d-flex justify-content-between align-items-center mb-3">

    <div class="mr-3">
      <%= image_tag "logo.png", alt: '', class: 'pdf-logo' %>
      <br>
      <h1 class="mt-3 js-title">
        <%= @event.name %>
      </h1>
    </div>

    <span class='pdf-qr'><%= @ticket.qr_code(7) %></span>
  </div>

  <div class="d-flex justify-content-between align-items-center mb-5">
    <div>
      <h2>
        <%= @event.starts_at.strftime("%A, #{@event.starts_at.day.ordinalize} %b %Y, %-l:%M%p") %>
      </h2>
      <p>Order#: <%= @order.id %></p>
      <p>Tix#: <%= @ticket.hex %></p>

      <p class="mb-3">
        Issued: <%= @ticket.created_at.strftime("%A, #{@ticket.created_at.day.ordinalize} %b %Y, %-l:%M%p") %>
      </p>
    </div>

    <div class="pdf-text-right">
      <h1>
        <%= @event_category.name %>
      </h1>

      <h1>
        â‚¬<%= @event_category.price %>
      </h1>
    </div>
  </div>

  <div class="pdf-flyer d-flex justify-content-around align-items-center pdf-bg-darker">
    <% if @event.image.attached? %>
      <%= cl_image_tag @event.image.key, crop: :fill, alt: "@event flyer", class: "pdf-flyer-img" %>
    <% else %>
      <h1>FUN!</h1>
    <% end %>
  </div>

  <br>

  <div class="d-flex justify-content-end">

    <%= link_to 'Print tix', '', class: 'btn-1', onclick: 'window.print()' %>

  </div>
</div>
