<%= render '../views/shared/forms/form_top'%>

  <%= simple_form_for [ @event, @order ] do |f| %>

  <% @event.event_categories.each do |category| %>
    <div class="row">
      <div class="form-group col flex-grow-1">
        <%= category.name %>
      </div>
      <div class="form-group col">
        <%= number_field_tag "tickets_for[]#{category.id}"%>
      </div>
    </div>
  <% end %>

  <%= f.submit :submit, class: "btn-1" %>
  <% end %>

<%= render '../views/shared/forms/form_bottom'%>
