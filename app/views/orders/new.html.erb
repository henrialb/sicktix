<%= render '../views/shared/forms/form_top'%>

  <h1>New Order</h1>
  <br>
  <%= simple_form_for [ @event, @order ] do |f| %>
    <% @event.event_categories.each do |category| %>
      <div class="row d-flex justify-content-between align-items-center">
        <div class="form-group col">
          <h2 class="m-0 text-shadow-light"><%= category.name %></h2>
          <p>(<%= category.price %>â‚¬)</p>
        </div>

        <div class="form-group col d-flex justify-content-end">
          <%= number_field_tag "tickets_for[]#{category.id}"%>
        </div>
      </div>
    <% end %>
    <%= f.submit :submit, class: "btn-1", value: "Create Order" %>
  <% end %>
  <div class="d-flex">
    <%= link_to 'Back to Event', event_path(@event.id), method: :get, class: 'btn-2 mr-3' %>
    <%= link_to 'Back to Orders', event_orders_path(@event.id), method: :get, class: 'btn-2 mr-3' %>
  </div>

<%= render '../views/shared/forms/form_bottom'%>
