<div class="container justify-content-between bg-white rounded p-3">
  <h1 class="card-title text-shadow-light">Upcoming events</h1>
    <% @events.each do |event| %>
      <% if !event.past? %>
        <%= link_to event, :action => 'go' do %> <%# Not working yet %>
          <div class="card-stripe">
            <div class="flex-container">
              <div class="flex-item img">
                <% if event.image.attached? %>
                  <%= cl_image_tag event.image.key, height: 300, width: 400, crop: :fill, alt: "placeholderpfp.jpg" %>
                <% end %>
              </div>
              <div class="card-content">
                <h2 ><%= link_to event.name, event %></h2>
                <p><%= event.venue.name %></p>
              </div>
              <div class="card-date">
                <p><%= event.starts_at.strftime("%a %d %b %Y") %></p>
                <p><%= event.starts_at.strftime("%-l:%M%p") %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <h1 class="card-title text-shadow-light">Past events</h1>
    <% @events.each do |event| %>
      <% if event.past? %>
        <%= link_to event, :action => 'go' do %> <%# Not working yet %>
          <div class="card-stripe">
            <div class="flex-container">
              <div class="flex-item img">
                <% if event.image.attached? %>
                  <%= cl_image_tag event.image.key, height: 300, width: 400, crop: :fill, alt: "placeholderpfp.jpg" %>
                <% end %>
              </div>
              <div class="card-content">
                <h2 ><%= link_to event.name, event %></h2>
                <p><%= event.venue.name %></p>
              </div>
              <div class="card-date">
                <p><%= event.starts_at.strftime("%a %d %b %Y") %></p>
                <p><%= event.starts_at.strftime("%-l:%M%p") %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <div class="d-flex justify-content-center p-3">
        <%= link_to root_path, method: :get, class: 'btn-2 mr-3' do %>
          Go back
        <% end %>
    </div>
</div>
